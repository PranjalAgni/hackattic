{
  "compilerOptions": {
    "module": "CommonJS",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "strictNullChecks": true,
    "paths": {
      "*": ["node_modules/*", "challenges/types/*"]
    }
  },
  "include": ["challenges/**/*", "*.ts"]
}